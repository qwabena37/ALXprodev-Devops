#!/bin/bash
#Script to fetch Pikachu data from the Pokémon API

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

#Fetch data and check for errors
if curl -s -f "$API_URL" -o "$OUTPUT_FILE"; then
    echo "✅ Data for Pikachu saved to $OUTPUT_FILE"
else
    echo "❌ Failed to fetch data for Pikachu from $API_URL" >> "$ERROR_FILE"
    exit 1
fi

